<Page x:Class="testDemoYP.pagesFr.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:testDemoYP.pagesFr"
      mc:Ignorable="d"    
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Товары"      
      FontSize="14"
      FontFamily="TimesNewRoman"
      Background="{StaticResource PrimaryBackground}">

    <Grid Margin="10" Background="{StaticResource PrimaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Source="/pagesFr/photo/Icon.png" Width="50" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Border Grid.Row="0" x:Name="UserInfoPanel" Background="{StaticResource AccentBrush}" CornerRadius="5" Padding="10" 
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                    <TextBlock x:Name="UserNameText" Text="" FontWeight="Bold" FontSize="12"/>
                    <TextBlock x:Name="UserRoleText" Text="" FontSize="11"/>
                </StackPanel>
                <Button x:Name="LogoutBtn" Content="Выход" Click="LogoutBtn_Click" 
                        Width="80" Height="30" Background="{StaticResource SecondaryBackground}"/>
            </StackPanel>
        </Border>

        <Border x:Name="ControlsPanel" Grid.Row="0" Background="{StaticResource SecondaryBackground}" CornerRadius="5" Padding="15" Margin="0,50,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                    <TextBlock Text="Поиск по названию" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox x:Name="SearchTextBox" Width="150" Height="30" TextChanged="SearchTextBox_TextChanged"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                    <TextBlock Text="Сортировка" FontSize="12" Margin="0,0,0,5"/>
                    <ComboBox x:Name="SortComboBox" Width="150" Height="30" SelectionChanged="SortComboBox_SelectionChanged" SelectedIndex="0">
                        <ComboBoxItem Content="Без сортировки"/>
                        <ComboBoxItem Content="По количеству (возр.)"/>
                        <ComboBoxItem Content="По количеству (убыв.)"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                    <TextBlock Text="Категория" FontSize="12" Margin="0,0,0,5"/>
                    <ComboBox x:Name="FilterComboBox" Width="150" Height="30" SelectionChanged="FilterComboBox_SelectionChanged" SelectedIndex="0">
                        <ComboBoxItem Content="Все категории"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Vertical" Visibility="Hidden">
                    <TextBlock Text="Скидка" FontSize="12" Margin="0,0,0,5"/>
                    <ComboBox x:Name="DiscountFilterComboBox" Width="150" Height="30" SelectionChanged="DiscountFilterComboBox_SelectionChanged" SelectedIndex="0">
                        <ComboBoxItem Content="Все товары"/>
                        <ComboBoxItem Content="Скидка > 15%"/>
                    </ComboBox>
                </StackPanel>

                <!--<StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="0,18,0,0">
                    <Button x:Name="ClearFiltersButton" Content="Очистить фильтры" Click="ClearFiltersButton_Click" 
                            Width="130" Height="30" Background="{StaticResource AccentBrush}"/>
                </StackPanel>-->
            </StackPanel>
        </Border>

        <ListView Name="ProductsListView" Grid.Row="1" HorizontalContentAlignment="Stretch" 
                  MouseDoubleClick="ProductsListView_MouseDoubleClick"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                  Background="{StaticResource PrimaryBackground}"
                  BorderThickness="0" 
                  d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" BorderThickness="1" Margin="2" Padding="10" CornerRadius="5"
                            Background="{Binding BackgroundColor}">
                        <Grid MinWidth="280">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.35*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" Margin="0,0,10,0" Background="White" Height="150">
                                <Image Stretch="Uniform">
                                    <Image.Source>
                                        <Binding Path="Photo">
                                            <Binding.TargetNullValue>
                                                <BitmapImage UriSource="photo/Icon.png"/>
                                            </Binding.TargetNullValue>
                                        </Binding>
                                    </Image.Source>
                                </Image>
                            </Border>

                            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0,0,10,0">
                                <TextBlock Text="{Binding Category1.CategoryName, StringFormat={}Категория товара | {0}}" FontSize="14" Margin="0,0,0,2"/>
                                <TextBlock Text="{Binding Title1.TitleName}" FontSize="14" FontWeight="Bold" TextWrapping="Wrap" Margin="0,5,0,5"/>
                                <TextBlock Text="{Binding Description, StringFormat={}Описание товара: {0}}" FontSize="14"/>
                                <TextBlock Text="{Binding Manufacturer1.ManufacturerName, StringFormat={}Производитель: {0}}" FontSize="14"/>
                                <TextBlock Text="{Binding Postavchick.SupplierName, StringFormat={}Поставщик: {0}}" FontSize="14"/>

                                <StackPanel Orientation="Horizontal" Margin="0,2,0,5">
                                    <TextBlock Text="{Binding OriginalPriceValue, StringFormat={}{0} руб.}" FontSize="14" Margin="0,0,5,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextDecorations" Value="None"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasDiscount}" Value="True">
                                                        <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                        <Setter Property="Foreground" Value="DarkRed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="{Binding DiscountedPriceValue, StringFormat={}→ {0} руб.}" FontSize="14" FontWeight="Bold" Visibility="{Binding HasDiscount}"/>
                                </StackPanel>

                                <TextBlock Text="{Binding Edinica, StringFormat={}Единица измерения: {0}}" FontSize="14"/>
                                <TextBlock Text="{Binding CountOnSklad, StringFormat={}Количество на складе: {0}}" FontSize="14"/>
                            </StackPanel>

                            <Border Grid.Column="2" Padding="5" CornerRadius="3" VerticalAlignment="Center" Background="Transparent">
                                <TextBlock Text="{Binding Sale, StringFormat={}Скидка: {0}%}" FontSize="14" FontWeight="SemiBold" Foreground="DarkRed" TextAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>