<Page x:Class="testDemoYP.pagesFr.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:testDemoYP.pagesFr"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Товары"      
      FontSize="14"
      Background="{StaticResource PrimaryBackground}">

    <Grid Margin="10" Background="{StaticResource PrimaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border x:Name="ControlsPanel" Grid.Row="0" Background="{StaticResource SecondaryBackground}" CornerRadius="5" Padding="15" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                    <TextBlock Text="Поиск по названию" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox x:Name="SearchTextBox" Width="150" Height="30" TextChanged="SearchTextBox_TextChanged"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                    <TextBlock Text="Сортировка" FontSize="12" Margin="0,0,0,10"/>
                    <ComboBox x:Name="SortComboBox" Width="150" Height="30" SelectionChanged="SortComboBox_SelectionChanged" SelectedIndex="0">
                        <ComboBoxItem Content="Без сортировки"/>
                        <ComboBoxItem Content="По названию (А-Я)"/>
                        <ComboBoxItem Content="По названию (Я-А)"/>
                        <ComboBoxItem Content="По цене (возр.)"/>
                        <ComboBoxItem Content="По цене (убыв.)"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                    <TextBlock Text="Категория" FontSize="12" Margin="0,0,0,10"/>
                    <ComboBox x:Name="FilterComboBox" Width="150" Height="30" SelectionChanged="FilterComboBox_SelectionChanged"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="ClearFiltersButton" Content="Очистить фильтры" Click="ClearFiltersButton_Click" 
                            Width="130" Height="30" Background="{StaticResource AccentBrush}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <ListView Name="ProductsListView" Grid.Row="1" HorizontalContentAlignment="Center" 
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="{StaticResource PrimaryBackground}">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" BorderThickness="1" 
                            Background="{StaticResource PrimaryBackground}" Margin="5" Padding="10" CornerRadius="5">
                        <Grid Width="220">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="200"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="{Binding Title1.TitleName}" TextWrapping="Wrap" 
                                       HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>

                            <Image Grid.Row="1" Width="200" Stretch="UniformToFill" HorizontalAlignment="Center">
                                <Image.Source>
                                    <Binding Path="Photo">
                                        <Binding.TargetNullValue>
                                            <BitmapImage UriSource="photo/default.png"/>
                                        </Binding.TargetNullValue>
                                    </Binding>
                                </Image.Source>
                            </Image>

                            <TextBlock Grid.Row="2" Text="{Binding Price, StringFormat={}Цена: {0} руб.}" HorizontalAlignment="Center" 
                                       FontSize="14" Margin="0,5,0,0"/>

                            <TextBlock Grid.Row="3" Text="{Binding Manufacturer1.ManufacturerName}" HorizontalAlignment="Center" 
                                       FontSize="14" Margin="0,5,0,0"/>

                            <TextBlock Grid.Row="4" Text="{Binding Category1.CategoryName}" HorizontalAlignment="Center" 
                                       FontSize="14" Margin="0,5,0,0"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>