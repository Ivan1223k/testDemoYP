<Page x:Class="testDemoYP.pagesFr.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:testDemoYP.pagesFr"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d"    
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Товары"      
      FontSize="14"
      FontFamily="TimesNewRoman"
      Background="{StaticResource PrimaryBackground}">
    

    
    
    <Grid Margin="10" Background="{StaticResource PrimaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

     

        <Border x:Name="ControlsPanel" Grid.Row="0" Background="{StaticResource SecondaryBackground}" CornerRadius="5" Padding="15" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                    <TextBlock Text="Поиск по названию" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox x:Name="SearchTextBox" Width="150" Height="30" TextChanged="SearchTextBox_TextChanged"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                    <TextBlock Text="Сортировка" FontSize="12" Margin="0,0,0,5"/>
                    <ComboBox x:Name="SortComboBox" Width="150" Height="30" SelectionChanged="SortComboBox_SelectionChanged" SelectedIndex="0">
                        <ComboBoxItem Content="Без сортировки"/>
                        <ComboBoxItem Content="По названию (А-Я)"/>
                        <ComboBoxItem Content="По названию (Я-А)"/>
                        <ComboBoxItem Content="По цене (возр.)"/>
                        <ComboBoxItem Content="По цене (убыв.)"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                    <TextBlock Text="Категория" FontSize="12" Margin="0,0,0,5"/>
                    <ComboBox x:Name="FilterComboBox" Width="150" Height="30" SelectionChanged="FilterComboBox_SelectionChanged" SelectedIndex="0">
                        <ComboBoxItem Content="Без сортировки"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="0,18,0,0">
                    <Button x:Name="ClearFiltersButton" Content="Очистить фильтры" Click="ClearFiltersButton_Click" 
                            Width="130" Height="30" Background="{StaticResource AccentBrush}"/>
                </StackPanel>

                <Button x:Name="LogoutBtn" Content="Выход" Click="LogoutBtn_Click" VerticalAlignment="Center" Width="80" Height="30" Margin="5,18,0,0" Background="{StaticResource AccentBrush}"/>

            </StackPanel>
        </Border>
        
        
        <ListView Name="ProductsListView" Grid.Row="1" HorizontalContentAlignment="Stretch" 
          ScrollViewer.HorizontalScrollBarVisibility="Auto" Background="{StaticResource PrimaryBackground}"
          BorderThickness="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" BorderThickness="1" Background="{StaticResource PrimaryBackground}" Margin="2" Padding="10" CornerRadius="5">
                        <Grid MinWidth="280">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.35*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Фото -->
                            <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" Margin="0,0,10,0" Background="White" Height="150">
                                <Image Stretch="Uniform">
                                    <Image.Source>
                                        <Binding Path="Photo">
                                            <Binding.TargetNullValue>
                                                <BitmapImage UriSource="photo/default.png"/>
                                            </Binding.TargetNullValue>
                                        </Binding>
                                    </Image.Source>
                                </Image>
                            </Border>

                            <!-- Информация -->
                            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0,0,10,0">
                                <TextBlock Text="{Binding Category1.CategoryName, StringFormat={}Категория товара | {0}}" FontSize="12" Margin="0,0,0,2"/>
                                <TextBlock Text="{Binding Title1.TitleName}" FontSize="14" FontWeight="Bold" TextWrapping="Wrap" Margin="0,5,0,5"/>
                                <TextBlock Text="{Binding Description, StringFormat={}Описание товара: {0}}" FontSize="11"/>
                                <TextBlock Text="{Binding Manufacturer1.ManufacturerName, StringFormat={}Производитель: {0}}" FontSize="11"/>
                                <TextBlock Text="{Binding Postavchick.SupplierName, StringFormat={}Поставщик: {0}}" FontSize="11"/>
                                <TextBlock Text="{Binding Price, StringFormat={}Цена: {0} руб.}" FontSize="12" Foreground="DarkRed" FontWeight="Bold" Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding Edinica, StringFormat={}Единица измерения: {0}}" FontSize="11"/>
                                <TextBlock Text="{Binding CountOnSklad, StringFormat={}Количество на складе: {0}}" FontSize="11"/>
                            </StackPanel>

                            <Border Grid.Column="2" Padding="5" CornerRadius="3" VerticalAlignment="Center">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Sale}">
                                                <DataTrigger.Value>
                                                    <sys:Decimal>15</sys:Decimal>
                                                </DataTrigger.Value>
                                                <Setter Property="Background" Value="#2E8B57"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding Sale, StringFormat={}Действующая скидка: {0}%}" FontSize="11" FontWeight="SemiBold" Foreground="DarkRed" TextAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </Grid>
</Page>