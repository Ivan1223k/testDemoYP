<Page x:Class="testDemoYP.pagesFr.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:testDemoYP.pagesFr"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация"
      FontSize="14">

    <Grid Background="{StaticResource PrimaryBackground}">
        <Border Background="{StaticResource SecondaryBackground}" CornerRadius="10" Padding="30" 
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Width="300">
                <TextBlock Text="Вход в систему" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                <TextBox x:Name="LoginTextBox" Height="30" Margin="0,0,0,15"/>
                <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,25"/>
                <Button x:Name="LoginBtn" Content="Войти" Click="LoginBtn_Click" Background="{StaticResource AccentBrush}" Height="35" Margin="0,0,0,10"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
