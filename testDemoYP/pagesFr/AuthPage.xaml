<Page x:Class="testDemoYP.pagesFr.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:testDemoYP.pagesFr"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация"
      FontFamily="TimesNewRoman"
      FontSize="14">

    <Grid Background="{StaticResource PrimaryBackground}">
        <Border Background="{StaticResource SecondaryBackground}" CornerRadius="10" Padding="30" 
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Width="300">
                <TextBlock Text="Вход в систему" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                
                <Image Source="/pagesFr/photo/Icon.png" Width="100" Margin="0,0,0,5"/>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Логин: " FontSize="14" Margin="0,0,0,15"/>
                    <TextBox x:Name="LoginTextBox" Height="30" Width="240" Margin="0,0,0,15"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Пароль: "/>
                    <PasswordBox x:Name="PasswordBox" Height="30" Width="230"  Margin="0,0,0,25"/>
                </StackPanel>
                
                <Button x:Name="LoginBtn" Content="Войти" Click="LoginBtn_Click" Background="{StaticResource AccentBrush}" Height="35" Margin="0,0,0,10"/>
                <Button x:Name="GuestBtn" Content="Войти как гость" Background="{StaticResource AccentBrush}" Click="GuestBtn_Click" Height="35"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>