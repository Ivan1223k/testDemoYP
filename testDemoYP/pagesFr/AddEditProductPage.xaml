<Page x:Class="testDemoYP.pagesFr.AddEditProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:testDemoYP.pagesFr"
      mc:Ignorable="d" 
      FontSize="14"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление/редактирование товара"
      Background="{StaticResource PrimaryBackground}">

    <Grid Margin="10" Background="{StaticResource PrimaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Название:" Margin="0,0,0,5"/>
        <ComboBox x:Name="TitleComboBox" Grid.Row="1" DisplayMemberPath="TitleName" SelectedValuePath="ID_Title" Margin="0,0,0,10" Background="White"/>

        <TextBlock Grid.Row="2" Text="Единица измерения:" Margin="0,0,0,5"/>
        <TextBox x:Name="UnitTextBox" Grid.Row="3" Margin="0,0,0,10" Background="White"/>

        <TextBlock Grid.Row="4" Text="Цена:" Margin="0,0,0,5"/>
        <TextBox x:Name="PriceTextBox" Grid.Row="5" Margin="0,0,0,10" Background="White"/>

        <TextBlock Grid.Row="6" Text="Поставщик:" Margin="0,0,0,5"/>
        <ComboBox x:Name="SupplierComboBox" Grid.Row="7" DisplayMemberPath="SupplierName" SelectedValuePath="ID_Supplier" Margin="0,0,0,10" Background="White"/>

        <TextBlock Grid.Row="8" Text="Производитель:" Margin="0,0,0,5"/>
        <ComboBox x:Name="ManufacturerComboBox" Grid.Row="9" DisplayMemberPath="ManufacturerName" SelectedValuePath="ID_Manufacturer" Margin="0,0,0,10" Background="White"/>

        <TextBlock Grid.Row="10" Text="Категория:" Margin="0,0,0,5"/>
        <ComboBox x:Name="CategoryComboBox" Grid.Row="11" SelectedValuePath="ID_Category" DisplayMemberPath="CategoryName" Margin="0,0,0,10" Background="White"/>

        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,0,10,0" Width="80" Background="{StaticResource AccentBrush}"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="80" Background="{StaticResource SecondaryBackground}"/>
        </StackPanel>
    </Grid>
</Page>